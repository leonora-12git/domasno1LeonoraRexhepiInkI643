<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="412dp"
        android:layout_height="172dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#c2c2a3"
            android:paddingTop="9dp"
            android:text="Favorite Twitter Searches"
            android:textColor="#3d3d29"
            android:textSize="23sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Enter Twitter search query here"
            android:textColor="#888888"
            android:textSize="27sp" />

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="560dp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="270dp"
                android:layout_height="56dp"
                android:text="Tag your query"
                android:textColor="#888888"
                android:textSize="27sp" />

            <Button
                android:layout_width="137dp"
                android:layout_height="60dp"
                android:backgroundTint="#A0A0A0"
                android:text="Save"
                android:textColor="#000000"
                android:textSize="23sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="555dp"
        android:layout_marginTop="170dp"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:background="#e68a00"
            android:text="Tagged Searches"
            android:textAlignment="center"
            android:textSize="25sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:background="#e68a00"
            android:columnCount="2"
            android:padding="15dp"
            android:rowCount="7">

            <Button
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_marginRight="21dp"
                android:backgroundTint="#A0A0A0"
                android:text="AndroidFP"
                android:textColor="#000000"
                android:textSize="21sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:backgroundTint="#A0A0A0"
                android:text="Edit"
                android:textColor="#000000"
                android:textSize="21sp" />

            <Button
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_marginRight="21dp"
                android:backgroundTint="#A0A0A0"
                android:text="Deitel"
                android:textColor="#000000"
                android:textSize="21sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:backgroundTint="#A0A0A0"
                android:text="Edit"
                android:textColor="#000000"
                android:textSize="21sp" />

            <Button
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_marginRight="21dp"
                android:backgroundTint="#A0A0A0"
                android:text="Google"
                android:textColor="#000000"
                android:textSize="21sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:backgroundTint="#A0A0A0"
                android:text="Edit"
                android:textColor="#000000"
                android:textSize="21sp" />

            <Button
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_marginRight="21dp"
                android:backgroundTint="#A0A0A0"
                android:text="iPhoneFP"
                android:textColor="#000000"
                android:textSize="21sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:backgroundTint="#A0A0A0"
                android:text="Edit"
                android:textColor="#000000"
                android:textSize="21sp" />

            <Button
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_marginRight="21dp"
                android:backgroundTint="#A0A0A0"
                android:text="JavaFP"
                android:textColor="#000000"
                android:textSize="21sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:backgroundTint="#A0A0A0"
                android:text="Edit"
                android:textColor="#000000"
                android:textSize="21sp" />

            <Button
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_marginRight="21dp"
                android:backgroundTint="#A0A0A0"
                android:text="JavaHTP"
                android:textColor="#000000"
                android:textSize="21sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:backgroundTint="#A0A0A0"
                android:text="Edit"
                android:textColor="#000000"
                android:textSize="21sp" />

        </GridLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:backgroundTint="#A0A0A0"
            android:text="Clear Tags"
            android:textColor="#000000"
            android:textSize="21sp"
            />
    </LinearLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Domasno1LeonoraRexhepiINKI643.AppBarOverlay">


    </com.google.android.material.appbar.AppBarLayout>




</androidx.coordinatorlayout.widget.CoordinatorLayout>